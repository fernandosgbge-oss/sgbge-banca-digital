rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write only their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create loan requests
    match /loanRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // Allow users to manage their notifications
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Default catch-all (keep accessible for dev, but specific rules usually take precedence or combine)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 5, 1);
    }
  }
}
